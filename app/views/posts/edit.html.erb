<div class="container-fluid">
	<h1>Edit comment</h1>
	<%= form_with model: @post, url: post_path, local: true do |form| %>
		<p>
				<%= form.label :post_title %><br/>
				<%= form.text_field :post_title %>
		</p>
		<p>
				<%= form.label :content %><br/>
				<%= form.text_area :content %>
		</p>
		<p>
			<br/>
			<%= form.submit %>
		</p>
	<% end %>

	<%= link_to 'Back', posts_path %>
</div>