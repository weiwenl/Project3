<div class="container-fluid">
	<div class="row">
		<div class="col-sm-6 ml-3 mt-3">
			<h1>List of posts</h1>
			<ol>
				<% @post.each do |post| %>
					<li><h3>
						<%= link_to post.post_title, post_path(post.id)%></h3></li>
					<p><%= post.content %></p>
					<p class="name-footer"><%=link_to @programmer.name, programmer_path(@programmer.id), :style =>"color: #ff82f4" %></p>
					<%= link_to like_post_path(post, @programmer), method: :put do %>
					  <%= image_tag("/images/like.png", :style => "width: 5%")%>
					  <%= post.get_upvotes.size %>
					<% end %>
				<% end %>
			</ol>
      <%= link_to 'Create New Post', new_programmer_post_path(programmer_id: @programmer.id), :class => "btn btn-info"%>
		</div>
	</div>
</div>