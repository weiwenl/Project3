<!DOCTYPE html>
<html>
  <head>
    <title>Project3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="navbar navbar-light bg-dark">
  		<a class="navbar-brand" href="/"><img src="/images/banana.png" style="border-radius: 10px" width="35" height="35" class="d-inline-block align-top" alt=""><span style="color:#ffed7a; padding-left: 10px;">StackBananaFlow</a>
  	  <% if !user_signed_in? %>
	  	  <form class="form-inline">
	  			  <a class="btn btn-outline-primary" href="/users/sign_in" role="button">Login</a>
	  			  <div style="padding-left: 10px;">
	  			    <a class="btn btn-outline-success" href="/users/sign_up" role="button">Sign Up</a>
	  			  </div>
	  		</form>
	  	<% else %>
	  	  <form class="form-inline">
	  	  		<% if current_user.programmer != nil  %>
                <%= link_to 'My Profile', programmer_path(current_user.programmer.id) %>
                <%= link_to 'My Post',  programmer_posts_path(current_user.programmer.id) %>
	 					<% else %>
	 							<%= link_to 'My Profile', new_programmer_path  %>
	 					<% end %>

	  	  	<div style="padding-left: 30px;">
	 					<%= link_to 'All posts', posts_path %>
	 				</div>
	 				<div style="padding-left: 30px;">
	 					<%= link_to 'Chatbox' %>
	 				</div>
	 				<div style="padding-left: 30px;">
	 					<%= link_to "Sign out", destroy_user_session_path, method: :delete %>
	 				</div>
		  	</form>

	  	<% end %>
  	</nav>

		<p class="notice" style="display:none;"><%= notice %></p>
    <p class="alert" style="display:none;"><%= alert %></p>
    <%= yield %>
  </body>
</html>
