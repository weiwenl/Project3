<div class="container-fluid">
	<div class="row">
		<div class="col-sm-6 ml-3 mt-3">

		<%= form_with model: @comment, url: post_comment_path, local: true do |form| %>

		<p>

			<br>
			<b><%= form.label :Edit_your_comments_below %>:</b>
			<br>
			<%= form.text_area :commentContents %>
		</p>
	 	<p>
			<%= form.submit :class => "btn btn-info"%>
		</p>
		<% end %>

		<%= link_to 'Back', post_path,  :class => "btn btn-info" %>

		</div>
	</div>
</div>


